<h1>Villagers</h1>
@*<div class="wrapper">*@
    <div class="gallery">
        <ul>
        @foreach (var villager in Model)
        {
            <li>
                <a asp-controller="Villager" asp-action="Details" asp-route-id="@villager.Id">
                    @*<img src="~/lib/images/@(villager.ImageFileName).png" />*@
                    <img src="@Url.Content("~/lib/images/" + villager.ImageFileName)" alt="Villager Image" />
                </a>
            </li>
        }
        </ul>
    </div>
@*</div>*@

@foreach (var villager in Model)
{ 
    <tr>
        <td>@villager.Name</td>
        <td>@villager.Birthday</td>
        <td>@villager.BestGifts</td>
    </tr>
}
